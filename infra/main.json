{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "17459401026404405648"
    }
  },
  "parameters": {
    "baseName": {
      "type": "string",
      "defaultValue": "wan-video-api",
      "metadata": {
        "description": "Base name for all resources"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "containerImageTag": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "Container image name with tag (e.g., wan-api:latest)"
      }
    },
    "modelType": {
      "type": "string",
      "defaultValue": "ti2v-5B",
      "metadata": {
        "description": "Model type to use"
      }
    },
    "minReplicas": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "Minimum replicas for the container app"
      }
    },
    "maxReplicas": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "Maximum replicas for the container app"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {
        "application": "wan-video-api",
        "environment": "production",
        "managedBy": "bicep"
      },
      "metadata": {
        "description": "Tags to apply to all resources"
      }
    }
  },
  "variables": {
    "uniqueSuffix": "[uniqueString(resourceGroup().id)]",
    "registryName": "[format('acr{0}{1}', replace(parameters('baseName'), '-', ''), variables('uniqueSuffix'))]",
    "containerAppName": "[format('{0}-app', parameters('baseName'))]",
    "environmentName": "[format('{0}-env', parameters('baseName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2023-07-01",
      "name": "[variables('registryName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "sku": {
        "name": "Premium"
      },
      "properties": {
        "adminUserEnabled": true,
        "publicNetworkAccess": "Enabled",
        "networkRuleBypassOptions": "AzureServices",
        "policies": {
          "quarantinePolicy": {
            "status": "disabled"
          },
          "trustPolicy": {
            "type": "Notary",
            "status": "disabled"
          },
          "retentionPolicy": {
            "days": 7,
            "status": "enabled"
          }
        },
        "encryption": {
          "status": "disabled"
        },
        "dataEndpointEnabled": false
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-04-01",
      "name": "container-app-deployment",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "containerAppName": {
            "value": "[variables('containerAppName')]"
          },
          "environmentName": {
            "value": "[variables('environmentName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "containerRegistryServer": {
            "value": "[reference(resourceId('Microsoft.ContainerRegistry/registries', variables('registryName')), '2023-07-01').loginServer]"
          },
          "containerRegistryUsername": {
            "value": "[variables('registryName')]"
          },
          "containerRegistryPassword": {
            "value": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', variables('registryName')), '2023-07-01').passwords[0].value]"
          },
          "containerImage": {
            "value": "[format('{0}/wan-api:{1}', reference(resourceId('Microsoft.ContainerRegistry/registries', variables('registryName')), '2023-07-01').loginServer, parameters('containerImageTag'))]"
          },
          "modelType": {
            "value": "[parameters('modelType')]"
          },
          "minReplicas": {
            "value": "[parameters('minReplicas')]"
          },
          "maxReplicas": {
            "value": "[parameters('maxReplicas')]"
          },
          "cpu": {
            "value": "4.0"
          },
          "memory": {
            "value": "16Gi"
          },
          "targetPort": {
            "value": 8000
          },
          "tags": {
            "value": "[parameters('tags')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.39.26.7824",
              "templateHash": "2944521983307980345"
            }
          },
          "parameters": {
            "containerAppName": {
              "type": "string",
              "metadata": {
                "description": "Name of the Container App"
              }
            },
            "environmentName": {
              "type": "string",
              "metadata": {
                "description": "Name of the Container App Environment"
              }
            },
            "location": {
              "type": "string",
              "defaultValue": "[resourceGroup().location]",
              "metadata": {
                "description": "Location for all resources"
              }
            },
            "containerRegistryServer": {
              "type": "string",
              "metadata": {
                "description": "Container Registry login server"
              }
            },
            "containerRegistryUsername": {
              "type": "securestring",
              "metadata": {
                "description": "Container Registry username"
              }
            },
            "containerRegistryPassword": {
              "type": "securestring",
              "metadata": {
                "description": "Container Registry password"
              }
            },
            "containerImage": {
              "type": "string",
              "metadata": {
                "description": "Container image name with tag"
              }
            },
            "minReplicas": {
              "type": "int",
              "defaultValue": 1,
              "metadata": {
                "description": "Minimum number of replicas"
              }
            },
            "maxReplicas": {
              "type": "int",
              "defaultValue": 3,
              "metadata": {
                "description": "Maximum number of replicas"
              }
            },
            "cpu": {
              "type": "string",
              "defaultValue": "4.0",
              "metadata": {
                "description": "CPU cores (in cores)"
              }
            },
            "memory": {
              "type": "string",
              "defaultValue": "16Gi",
              "metadata": {
                "description": "Memory (in Gi)"
              }
            },
            "targetPort": {
              "type": "int",
              "defaultValue": 8000,
              "metadata": {
                "description": "Target port for the container"
              }
            },
            "tags": {
              "type": "object",
              "defaultValue": {
                "application": "wan-video-api",
                "environment": "production"
              },
              "metadata": {
                "description": "Tags to apply to resources"
              }
            },
            "modelType": {
              "type": "string",
              "defaultValue": "ti2v-5B",
              "metadata": {
                "description": "Model type to use (ti2v-5B, t2v-A14B, i2v-A14B)"
              }
            }
          },
          "resources": [
            {
              "type": "Microsoft.OperationalInsights/workspaces",
              "apiVersion": "2022-10-01",
              "name": "[format('{0}-logs', parameters('environmentName'))]",
              "location": "[parameters('location')]",
              "tags": "[parameters('tags')]",
              "properties": {
                "sku": {
                  "name": "PerGB2018"
                },
                "retentionInDays": 30
              }
            },
            {
              "type": "Microsoft.App/managedEnvironments",
              "apiVersion": "2023-05-01",
              "name": "[parameters('environmentName')]",
              "location": "[parameters('location')]",
              "tags": "[parameters('tags')]",
              "properties": {
                "appLogsConfiguration": {
                  "destination": "log-analytics",
                  "logAnalyticsConfiguration": {
                    "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', format('{0}-logs', parameters('environmentName'))), '2022-10-01').customerId]",
                    "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', format('{0}-logs', parameters('environmentName'))), '2022-10-01').primarySharedKey]"
                  }
                },
                "workloadProfiles": [
                  {
                    "name": "gpu-a100",
                    "workloadProfileType": "NC24ads-A100-v4",
                    "minimumCount": 1,
                    "maximumCount": 3
                  }
                ]
              },
              "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', format('{0}-logs', parameters('environmentName')))]"
              ]
            },
            {
              "type": "Microsoft.App/containerApps",
              "apiVersion": "2023-05-01",
              "name": "[parameters('containerAppName')]",
              "location": "[parameters('location')]",
              "tags": "[parameters('tags')]",
              "properties": {
                "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('environmentName'))]",
                "workloadProfileName": "gpu-a100",
                "configuration": {
                  "ingress": {
                    "external": true,
                    "targetPort": "[parameters('targetPort')]",
                    "transport": "http",
                    "allowInsecure": false,
                    "traffic": [
                      {
                        "latestRevision": true,
                        "weight": 100
                      }
                    ]
                  },
                  "registries": [
                    {
                      "server": "[parameters('containerRegistryServer')]",
                      "username": "[parameters('containerRegistryUsername')]",
                      "passwordSecretRef": "registry-password"
                    }
                  ],
                  "secrets": [
                    {
                      "name": "registry-password",
                      "value": "[parameters('containerRegistryPassword')]"
                    }
                  ],
                  "activeRevisionsMode": "Single"
                },
                "template": {
                  "containers": [
                    {
                      "name": "wan-api",
                      "image": "[parameters('containerImage')]",
                      "resources": {
                        "cpu": "[json(parameters('cpu'))]",
                        "memory": "[parameters('memory')]"
                      },
                      "env": [
                        {
                          "name": "MODEL_TYPE",
                          "value": "[parameters('modelType')]"
                        },
                        {
                          "name": "MODEL_PATH",
                          "value": "/app/models"
                        },
                        {
                          "name": "DEVICE_ID",
                          "value": "0"
                        },
                        {
                          "name": "OUTPUT_DIR",
                          "value": "/tmp/outputs"
                        },
                        {
                          "name": "HOST",
                          "value": "0.0.0.0"
                        },
                        {
                          "name": "PORT",
                          "value": "[string(parameters('targetPort'))]"
                        },
                        {
                          "name": "CUDA_VISIBLE_DEVICES",
                          "value": "0"
                        }
                      ],
                      "probes": [
                        {
                          "type": "Liveness",
                          "httpGet": {
                            "path": "/health",
                            "port": "[parameters('targetPort')]",
                            "scheme": "HTTP"
                          },
                          "initialDelaySeconds": 60,
                          "periodSeconds": 30,
                          "timeoutSeconds": 10,
                          "failureThreshold": 3
                        },
                        {
                          "type": "Readiness",
                          "httpGet": {
                            "path": "/health",
                            "port": "[parameters('targetPort')]",
                            "scheme": "HTTP"
                          },
                          "initialDelaySeconds": 30,
                          "periodSeconds": 10,
                          "timeoutSeconds": 5,
                          "failureThreshold": 3
                        }
                      ]
                    }
                  ],
                  "scale": {
                    "minReplicas": "[parameters('minReplicas')]",
                    "maxReplicas": "[parameters('maxReplicas')]",
                    "rules": [
                      {
                        "name": "http-scaling",
                        "http": {
                          "metadata": {
                            "concurrentRequests": "10"
                          }
                        }
                      }
                    ]
                  }
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.App/managedEnvironments', parameters('environmentName'))]"
              ]
            }
          ],
          "outputs": {
            "containerAppUrl": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.App/containerApps', parameters('containerAppName')), '2023-05-01').configuration.ingress.fqdn]"
            },
            "containerAppName": {
              "type": "string",
              "value": "[parameters('containerAppName')]"
            },
            "environmentName": {
              "type": "string",
              "value": "[parameters('environmentName')]"
            },
            "logAnalyticsWorkspaceId": {
              "type": "string",
              "value": "[resourceId('Microsoft.OperationalInsights/workspaces', format('{0}-logs', parameters('environmentName')))]"
            }
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.ContainerRegistry/registries', variables('registryName'))]"
      ]
    }
  ],
  "outputs": {
    "registryName": {
      "type": "string",
      "value": "[variables('registryName')]"
    },
    "registryLoginServer": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerRegistry/registries', variables('registryName')), '2023-07-01').loginServer]"
    },
    "containerAppUrl": {
      "type": "string",
      "value": "[format('https://{0}', reference(resourceId('Microsoft.Resources/deployments', 'container-app-deployment'), '2025-04-01').outputs.containerAppUrl.value)]"
    },
    "containerAppName": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Resources/deployments', 'container-app-deployment'), '2025-04-01').outputs.containerAppName.value]"
    },
    "resourceGroupName": {
      "type": "string",
      "value": "[resourceGroup().name]"
    }
  }
}